rules_version = '2';

// Déploiement : firebase deploy --only firestore:rules
// Pour créer le 1er admin : Firestore → users → {uid} → champ "role" = "admin"

service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc.exists && userDoc.data.role == 'admin';
    }

    match /pointsOfInterest/{docId} {
      allow read: if true;
      allow create, delete: if request.auth != null && isAdmin();
      allow update: if request.auth != null
        && (isAdmin() || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likesCount']));
    }

    match /users/{userId} {
      allow read, create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if false;
    }

    match /likes/{likeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update: if false;
    }
  }
}
